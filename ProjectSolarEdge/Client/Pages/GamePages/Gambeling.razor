@layout SeconderyLayout
@page "/Gambeling/{GameId}/{UserId}"

@inject IJSRuntime JSRuntime;

<link href="/css/styles/Gambeling.css" rel="stylesheet" />
<link href="/css/bootstrap/bootstrap.min.css" rel="stylesheet" />


<div id="gambelBack">
    <div class="container">
        <div class="flex-center flex-column ">

            <h1> How Much Would You Like To Bet On Your Success </h1>

            <p>@currentScore</p>
            @*<p id="colectedScore"></p>*@
         
                <select id="gambelOptions" class="btnGreen" @bind="@selectetScore">
                    @foreach (var Score in CorrentGambleScoreToInsert)
                    {
                        <option value=@Score>@Score</option>
                    }
                </select>
                <p> You've chosen to gamble on <span style="color:white">@selectetScore</span></p>
              

          

            @*<form>
                <select id="gambelOptions" class="btnGreen" onchange="gambelChoice()">
                    <option>0</option>
                    <option>100</option>
                    <option>200</option>
                    <option>300</option>
                    <option>400</option>
                    <option>500</option>
                    <option>600</option>
                </select>
                <p> You've chosen to gamble on </p> <p id="choosenGambel"></p>
                <input id="gambelScoreHidden" type="hidden" value="@GambelScore" @onchange="@(e=>{GambelScore=e.Value.ToString();})" />

            </form>*@


      


            <button type="button" id="gambelContinue" class="btnGreen" @onclick="GoToNext"> Continue</button>
            <a id="GoToGame" href="/GamePage"> </a>

        </div>

    </div>
</div>

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            CallJSMethod();
        }
    }

    private async Task CallJSMethod()
    {
        await JSRuntime.InvokeVoidAsync("gambelingPage");
    }
}


