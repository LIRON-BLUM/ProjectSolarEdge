@page "/questions"

<h3>Questions</h3>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Question Name</th>
            <th scope="col">Question Type</th>
            <th scope="col">Creation Date</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in QuestionsData)
        {
            <tr>
                <th scope="row">@question.ID</th>
                <td>@question.Name</td>
                <td>@question.Type</td>
                <td>@question.CreationDate</td>
                <td><a href="/questions/editQuestion/@question.ID"><button type="button" class="btn btn-primary btn-sm">Edit</button></a></td>
            </tr>
        }


    </tbody>
</table>